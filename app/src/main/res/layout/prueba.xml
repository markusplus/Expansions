<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@mipmap/ladrillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="@+id/ses"
        app:layout_constraintStart_toStartOf="@+id/ses"
        app:layout_constraintTop_toTopOf="@+id/ses" />

    <ImageButton
        android:id="@+id/image5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        app:layout_constraintBottom_toBottomOf="@+id/ses"
        app:layout_constraintEnd_toEndOf="@+id/ses"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ses"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/image4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="52dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        app:layout_constraintBottom_toBottomOf="@+id/ses"
        app:layout_constraintEnd_toEndOf="@+id/ses"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image5"
        app:layout_constraintVertical_bias="0.923" />

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ses"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <ImageButton
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ses" />

    <ImageButton
        android:id="@+id/image0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="280dp"
        android:alpha="0.5"
        android:background="@mipmap/circle"
        app:layout_constraintBottom_toBottomOf="@+id/ses"
        app:layout_constraintEnd_toEndOf="@+id/ses"
        app:layout_constraintStart_toStartOf="@+id/ses" />

    <TextView
        android:id="@+id/imageButton6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="36dp"
        android:alpha="0.3"
        android:background="@mipmap/circle"
        android:backgroundTint="#FFC107"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/ses"
        app:layout_constraintEnd_toEndOf="@+id/ses"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/ses" />
</androidx.constraintlayout.widget.ConstraintLayout>